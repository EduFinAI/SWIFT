    position: static !important;
    top: auto !important;
    left: auto !important;
    width: 100% !important;
    max-width: 100%;
    height: auto !important;
    margin: 0 auto;
    padding: 0 var(--space-4);
    box-sizing: border-box;
    display: block;
  }
  .pginainicial-group2 .pginainicial-frame27 {
    position: static !important;
    top: auto !important;
    left: auto !important;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6); /* 24px */
    justify-content: center;
    align-items: stretch;
    width: 100%;
  }
}

