/* ===== ESTILOS RESPONSIVOS ===== */

/* ===== Responsividade header + frete ===== */
@media (width <= 1024px) {
  .pginainicial-header { 
    padding: var(--space-5) var(--space-6); 
  }
  
  .pginainicial-navigation-pill-list { 
    flex-basis: 100%; 
    justify-content: center; 
    order: 3; 
  }

  .pginainicial-search1 { 
    max-width: 760px;   
    margin-top: -6px; 
    flex: 1 1 480px; 
    order: 2;
  }
}

@media (width <= 768px) {
  .pginainicial-header {
    padding: var(--space-4) var(--space-3);
    gap: var(--space-3); 
  }

  .pginainicial-search1 {
    max-width: 100%;  
    margin-top: -6px;
    flex-basis: 100%;
  }

  .pginainicial-navigation-pill-list {
    overflow-x: auto;
    padding-bottom: 6px;
    flex-basis: 100%;
    justify-content: flex-start;
    order: 3;
    white-space: nowrap;
    scrollbar-width: thin;
    -webkit-overflow-scrolling: touch;
  }

  .pginainicial-header-auth { 
    margin-left: auto; 
  }

  .pginainicial-frete { 
    height: auto; 
    min-height: 48px; 
    padding: var(--space-2) var(--space-3); 
  }

  .pginainicial-text107 {
    position: static;
    display: inline-block;
    width: auto;
    max-width: 100%;
    height: auto;
    flex: 0 0 auto;
    font-family: var(--font-primary);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-medium);
    line-height: 1.3;
    text-align: center;
    text-decoration: none;
    white-space: normal;
    color: var(--text-white);
    font-stretch: normal;
    overflow-wrap: anywhere;
  }

  .pginainicial-truck1 {
    height: 20px; 
  }

  .pginainicial-logo211 {
    top: 60px;
    left: 3px;
  }
}

@media (width <= 480px) {
  .pginainicial-header { 
    gap: 10px; 
  }
  
  .pginainicial-user { 
    width: 28px; 
    height: 28px; 
  }
  
  .pginainicial-car { 
    width: 26px; 
    height: 26px; 
  }

  .pginainicial-frete { 
    height: auto; 
    min-height: 44px; 
  }

  .pginainicial-text107 {
    position: static;
    display: inline-block;
    width: auto;
    max-width: 100%;
    height: auto;
    flex: 0 0 auto;
    font-family: var(--font-primary);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-medium);
    line-height: 1.3;
    text-align: center;
    text-decoration: none;
    white-space: normal;
    color: var(--text-white);
    font-stretch: normal;
    overflow-wrap: anywhere;
  }

  .pginainicial-truck1 {
    display: none; 
  }
}

