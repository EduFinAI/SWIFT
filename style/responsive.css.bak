/* Grid layout to keep icons right, nav above, search below on medium widths */
@media (width <= 1300px) {
  .pginainicial-header {
    display: grid !important;
    justify-content: stretch;
    align-items: center;
    gap: var(--space-2) var(--space-4);
    grid-template-columns: auto 1fr;
    grid-template-areas:
      "logo icons"
      "nav  nav"
      "search search";
  }
  
  .pginainicial-image1 { 
    grid-area: logo; 
    justify-self: start; 
  }
  
  .pginainicial-header-auth { 
    grid-area: icons; 
    justify-self: end; 
  }
  
  .pginainicial-navigation-pill-list { 
    justify-content: center; 
    grid-area: nav; 
  }
  
  .pginainicial-search1 { 
    width: 100%; 
    max-width: 760px; 
    margin-top: -6px; 
    grid-area: search; 
    justify-self: center; 
  }
}

@media (width <= 1024px) {
